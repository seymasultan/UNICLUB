<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorikincilArkplan">    <View        android:id="@+id/viewi"        android:layout_width="match_parent"        android:layout_height="5dp"        android:layout_marginStart="8dp"        android:layout_marginEnd="8dp"        android:alpha="0.2"        android:background="@color/solgun"/>    <LinearLayout        android:layout_marginTop="1dp"        android:id="@+id/gonderi_ogesi"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="0dp"        android:background="@drawable/gonderishape"        android:orientation="vertical"        android:layout_marginStart="8dp"        android:layout_marginEnd="8dp">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal">            <de.hdodenhof.circleimageview.CircleImageView                android:id="@+id/profil_resmi_Gonderi_Ogesi"                android:layout_width="40dp"                android:layout_height="40dp"                android:layout_margin="10dp"                android:src="@drawable/placeholder" />            <TextView                android:id="@+id/txt_kullaniciadi_Gonderi_Ogesi"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:fontFamily="sans-serif"                android:text="Kullanıcı Adı"                android:textColor="@color/solgun"                android:textSize="16sp"                android:textStyle="bold" />            <TextView                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_marginStart="200dp"                android:gravity="center"                android:drawableEnd="@drawable/ic_time"                android:id="@+id/txt_time_Gonderi_Ogesi"                android:text="16:36"                android:visibility="gone"                android:textColor="@color/solgun"/>        </LinearLayout>        <ImageView            android:id="@+id/gonderi_resmi_Gonderi_Ogesi"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:src="@drawable/logoholoo" />        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:padding="8dp">            <ImageView                android:id="@+id/yorum_Gonderi_Ogesi"                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_marginStart="10dp"                android:src="@drawable/ic_yorum" />            <ImageView                android:id="@+id/begeni_Gonderi_Ogesi"                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_alignParentEnd="true"                android:src="@drawable/ic_ok"                android:layout_marginEnd="10dp"                android:visibility="visible" />        </RelativeLayout>        <View            android:layout_width="match_parent"            android:layout_height="4.5dp"            android:layout_marginBottom="10dp"            android:background="@color/colorucunculArkplan" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:id="@+id/txt_begeniler_Gonderi_Ogesi"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingLeft="12dp"                android:text="10 Beğeni"                android:textColor="@color/solgun"                android:textStyle="bold" />            <TextView                android:id="@+id/txt_yorumSayisi_Gonderi_Ogesi"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingLeft="12dp"                android:text="10 yorum"                android:textColor="@color/solgun"                android:textStyle="bold" />        </LinearLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:padding="8dp">            <TextView                android:id="@+id/txt_gonderen_Gonderi_Ogesi"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingLeft="5dp"                android:text="Bilal Karataş"                android:textSize="14.5dp"                android:textColor="@color/colorAccent"                android:textStyle="bold" />            <TextView                android:id="@+id/txt_gonderiHakkinda_Gonderi_Ogesi"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_toRightOf="@+id/txt_gonderen_Gonderi_Ogesi"                android:text="Gönderi Hakkında"                android:textColor="@color/solgun" />        </RelativeLayout>        <TextView            android:id="@+id/txt_yorum_Gonderi_Ogesi"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="5dp"            android:layout_marginBottom="10dp"            android:paddingLeft="12dp"            android:text="20 yorumun hepsini gör"            android:textColor="@color/solgun"            android:textStyle="bold" />    </LinearLayout>    <View        android:id="@+id/viewiki"        android:layout_below="@+id/gonderi_ogesi"        android:layout_width="match_parent"        android:layout_height="5dp"        android:layout_marginStart="8dp"        android:layout_marginEnd="8dp"        android:alpha="0.2"        android:background="@color/solgun"/>    <View        android:id="@+id/viewilk"        android:layout_width="match_parent"        android:layout_height="12dp"        android:layout_below="@+id/gonderi_ogesi"        android:layout_marginStart="8dp"        android:layout_marginTop="1dp"        android:layout_marginEnd="8dp"        android:background="@drawable/viewshape" /></RelativeLayout>