<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/yorumshape">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_resmi_oge"
        android:src="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_toEndOf="@+id/profil_resmi_oge"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txt_kullaniciadi_oge"
            android:text="kullanıcı adı"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_ad_oge"
            android:text="Ad"
            android:maxLines="1"
            android:textColor="@color/solgun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_takipEt_oge"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="Takip Et"
        android:padding="5dp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/buton_disable"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="visible"/>

</RelativeLayout>