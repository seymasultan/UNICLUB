<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icon"
        android:alpha="0.2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:textColor="@color/colorAccent"
        android:alpha="0.8"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Burada görüntülenecek bir şey yok :("/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_HomeFragment"
        android:background="?android:attr/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/colorbirincilArkplan">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logoholoo" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:layout_marginEnd="15dp"
                android:src="@drawable/icon" />


        </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyler_view_HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar_HomeFragment">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>