<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/yorumshape">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_resmi_yorumOgesi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/profil_resmi_yorumOgesi">

        <TextView
            android:id="@+id/txt_kullaniciadi_yorumOgesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kullaniciadi"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/solgun"/>

        <TextView
            android:id="@+id/txt_yorum_yorumOgesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:layout_marginStart="10dp"
            android:text="yorum burada gözükecek"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

</RelativeLayout>