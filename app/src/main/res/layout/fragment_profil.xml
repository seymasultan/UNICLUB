<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbirincilArkplan"
    tools:context=".Cerceve.ProfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/bar_profilCerceve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/windowBackground">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar_profilCerceve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorbirincilArkplan">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_kullaniciadi_profilCerceve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="kullanıcı adı"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/resimSecenekler_profilCercevesi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_secenekler" />

                        </RelativeLayout>

                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>
            </RelativeLayout>


            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ust_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorikincilArkplan"
                        android:orientation="vertical"
                        android:paddingStart="18dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="13dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profil_resmi_profilCercevesi"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/placeholder" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="5dp"
                                        android:padding="2dp"
                                        android:text="Gönderiler"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/txt_gonderiler_profilCercevesi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="100k"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:alpha="0.2"
                                    android:background="@color/colorAccent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="5dp"
                                        android:text="Takipçiler"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/txt_takipciler_profilCercevesi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="100k"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                                ,

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:alpha="0.2"
                                    android:background="@color/colorAccent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:text="Takip Edilen"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/txt_takipEdilenler_profilCercevesi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="100k"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_profiliDuzenle_profilCercevesi"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/buton_disable"
                                    android:padding="0dp"
                                    android:text="Profili Düzenle"
                                    android:textColor="@color/colorAccent" />

                                <Button
                                    android:id="@+id/btn_kulupAc_profilCercevesi"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/buton_arkaplan"
                                    android:padding="0dp"
                                    android:text="Bu Kulübe katıl"
                                    android:textColor="@color/colorAccent" />

                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.5"
                            android:background="@color/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/orta_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorikincilArkplan"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txt_ad_profilCercevesi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"

                            android:maxLines="1"
                            android:text="AD"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="150dp"
                            android:layout_height="0.5dp"
                            android:alpha="0.3"
                            android:background="@color/colorAccent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="5dp"
                            android:alpha="0.3"
                            android:text="Hakkında"
                            android:textColor="@color/colorAccent"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/txt_bio_profilCercevesi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"

                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="bio"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/son_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="-5dp"
                        android:alpha="0.2"
                        android:background="@color/colorAccent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ımage_fotograflarım"
                            style="@android:style/Widget.DeviceDefault.ImageButton"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="@color/colorbirincilArkplan"
                            android:baselineAlignBottom="false"
                            android:clickable="false"
                            android:src="@drawable/ic_fotograflar" />

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

            <ScrollView
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:background="@color/colorikincilArkplan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView2">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="1" />
            </ScrollView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

